<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/vPHName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Steven Chaw"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vPHPhoto"
        app:layout_constraintTop_toTopOf="@+id/vPHPhoto" />

    <ImageView
        android:id="@+id/vPHPhoto"
        android:layout_width="83dp"
        android:layout_height="73dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/vPHId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="20W000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vPHPhoto"
        app:layout_constraintStart_toStartOf="@+id/vPHName"
        app:layout_constraintTop_toBottomOf="@+id/vPHName"
        app:layout_constraintVertical_bias="1.0" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description :"
        app:layout_constraintStart_toStartOf="@+id/vPHPhoto"
        app:layout_constraintTop_toBottomOf="@+id/vPHPhoto" />

    <TextView
        android:id="@+id/vPHDescription"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="content"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Price :"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/vPHName"
        app:layout_constraintStart_toEndOf="@+id/vPHName"
        app:layout_constraintTop_toTopOf="@+id/vPHName"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/vPHPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/vPStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/vPHId"
        app:layout_constraintStart_toEndOf="@+id/vPHId"
        app:layout_constraintTop_toTopOf="@+id/vPHId"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>